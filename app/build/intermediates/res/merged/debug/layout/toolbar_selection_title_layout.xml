<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lyt_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/margin_left_12_dp"
            android:src="@drawable/icon_back_white" />
    </LinearLayout>

    <com.zng.unionpayqr.widget.Indicator
        android:id="@+id/indicator"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:background="@color/title_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        app:indicatorColor="@color/white" >

        <TextView
            android:id="@+id/tv_pay_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="支付"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_pay_order_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="支付订单"
            android:textSize="18sp" />
    </com.zng.unionpayqr.widget.Indicator>

    <LinearLayout
        android:id="@+id/lyt_setting"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="@dimen/margin_left_12_dp"
            android:src="@drawable/icon_setting" />
    </LinearLayout>

</LinearLayout>